<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuSmall</item>
    </style>
    
    <style name="PopupMenuLarge" parent="Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="PopupMenuSmall" parent="Base.TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/primaryText</item>
    </style>

</resources>
